<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonXML"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text=" Parse XML "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/buttonJSON"
        android:layout_width="166dp"
        android:layout_height="61dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Parse JSON"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonXML"
        app:layout_constraintVertical_bias="0.138" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="389dp"
        android:layout_height="375dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:gravity="center">
            <TextView
                android:id="@+id/xmlHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="XML "
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/jsonHead"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="JSON"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xmlName"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="106dp" />
            <TextView
                android:id="@+id/jsonName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="clip_vertical|center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="106dp" />
        </TableRow>
        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xmlLat"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="149dp" />
            <TextView
                android:id="@+id/jsonLat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="clip_vertical|center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="149dp" />
        </TableRow>
        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xmlLong"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="193dp" />
            <TextView
                android:id="@+id/jsonLong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="193dp" />
        </TableRow>
        <TableRow
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xmlTemp"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="clip_horizontal|clip_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="237dp" />
            <TextView
                android:id="@+id/jsonTemp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="clip_vertical|center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="237dp" />
        </TableRow>
        <TableRow
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xmlHumid"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="clip_horizontal|clip_vertical"

                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/jsonHumid"
                android:layout_width="40dp"
                android:layout_height="57dp"
                android:layout_gravity="clip_vertical|center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="XML And JSON Parsing"
        android:textColor="#F44336"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
